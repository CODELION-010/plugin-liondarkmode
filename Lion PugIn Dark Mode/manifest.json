{
  "manifest_version": 3,
  "name": "Lion Dark Mode",
  "version": "1.0",
  "description": "Activa el modo oscuro en todas las p√°ginas web.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
